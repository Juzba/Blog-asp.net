@page "/Blog"
@model Blog_asp.net.Pages.Blog.BlogModel
@{
}

<div>

	<h1>Blog</h1>

    <a asp-area="" asp-page="/blog/edit" >Vytvořit post!</a>

    @if(Model.PostList == null || !Model.PostList.Any())
    {
        <p>Žádný obsah!!</p>
    }
    else
    {
	    <table>
            <thead >
                <tr>
                    <th>@Html.DisplayNameFor(prop=>prop.PostList[0].Title)</th>
                    <th>@Html.DisplayNameFor(prop=>prop.PostList[0].Date)</th>
                    <th>@Html.DisplayNameFor(prop=>prop.PostList[0].Text)</th>
                </tr>
            </thead>

            @foreach(var post in Model.PostList)
            {
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(p=>post.Title)</td>
                        <td>@Html.DisplayFor(p=>post.Date)</td>
                        <td>@Html.DisplayFor(p=>post.Text)</td>
                    </tr>
                </tbody>
            }
        </table>
    }




</div>

