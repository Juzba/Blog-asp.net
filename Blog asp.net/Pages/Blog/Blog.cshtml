@page "/Blog"
@model Blog_asp.net.Pages.Blog.BlogModel
@{
}

<div class="my-5">

    <h1>Blog</h1>

    <div class="d-flex justify-content-between my-4">
        <a class="btn btn-secondary btn-outline-light" asp-area="" asp-page="/blog/edit">Vytvořit post!</a>
        <form method="post" class="d-flex w-25">
            <select asp-for="@Model.Sort" class="form-select" aria-label="Default select example">
                <option value="1" selected>Id</option>
                <option value="2">Title</option>
                <option value="3">Date</option>
                <option value="4">Text</option>
            </select>
            <button type="submit" class="btn btn-primary ms-2" >Seřadit</button>
        </form>
    </div>


    @if(Model.PostList == null || !Model.PostList.Any())
    {
        <p class="my-5">Žádný obsah!!</p>
        return;
    }
    else
    {
        <table class="table table-dark table-striped">
            <thead >
                <tr>
                    <th>@Html.DisplayNameFor(prop=>prop.PostList[0].Id)</th>
                    <th>@Html.DisplayNameFor(prop=>prop.PostList[0].Title)</th>
                    <th>@Html.DisplayNameFor(prop=>prop.PostList[0].Date)</th>
                    <th>@Html.DisplayNameFor(prop=>prop.PostList[0].Text)</th>
                    <th>@Html.DisplayNameFor(prop=>prop.PostList[0].IsOnTop)</th>
                </tr>
            </thead>

            @foreach(var post in Model.PostList)
            {
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(p=>post.Id)</td>
                        <td>@Html.DisplayFor(p=>post.Title)</td>
                        <td>@Html.DisplayFor(p=>post.Date)</td>
                        <td>@Html.DisplayFor(p=>post.Text)</td>
                        <td>@if (post.IsOnTop) {<span class="bg-success p-1 rounded">Přípnuto</span> }</td>
                        <td><a asp-area="" asp-page="/Blog/Details" asp-route-id="@post.Id" class="btn btn-secondary">Details</a></td>
                    </tr>
                </tbody>
            }
        </table>
    }




</div>

